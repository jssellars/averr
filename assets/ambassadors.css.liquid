.ambas_hero_image{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  /*background-image: linear-gradient(155deg, rgba(248, 220, 209, 0), #f8dcd1);*/
  background: linear-gradient(131.83deg, rgba(248, 220, 209, 0) -2.43%, rgba(248, 220, 209, 0.7) 100%);

  margin-top: 6%;
}
.ambas_hero_image_position{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 61%;
  padding: 80px 0;
}
.ambas_hero_image_position h3{
  font-family: Gotham-book;
  padding: 0;
  margin: 0;
  font-style: normal;
  font-weight: normal;
  font-size: 18px;
  line-height: 22px;
  text-align: center;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  color: #000000;  
}
.ambas_hero_image_position h1{
  font-family: FreightDispProBook-Regular;
  font-style: normal;
  font-weight: normal;
  font-size: 60px;
  line-height: 75px;
  text-align: center;
  color: #000000;  
  letter-spacing: normal;
  padding: 0;
  margin: 16px 0 24px 0;
  text-transform: none;
}
.ambas_hero_image_position p{
  font-family: Gotham-book;
  font-style: normal;
  font-weight: normal;
  font-size: 20px;
  line-height: 32px;
  text-align: center;
  color: #222222;  
  letter-spacing: normal;
  padding: 0;
  margin: auto;
}
.join_us_block{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
}
.join_us_position{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 80%;
}
.join_us_position h1{
  font-family: Gotham-book;
  font-size: 18px;
  font-weight: 100;
  letter-spacing: 1.8px;
  text-transform: uppercase;
  color: #000000;
  margin: 60px 0 32px 0;
}
.benefits{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 60px;
}
.benefit_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 23%;
}
.benefit_item h1{
  font-family: Gotham-bold;
  font-style: normal;
  font-weight: bold;
  font-size: 16px;
  line-height: 19px;
  text-align: center;
  text-transform: uppercase;
  color: #000000;
  margin: 24px 0 16px 0;
}
.benefit_item p{
  font-family: Gotham-book;
  font-size: 16px;
  font-weight: 100;
  line-height: 1.75;
  letter-spacing: normal;
  color: #222222;
  text-align: center;
  margin: 0;
}
.left_image_block{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 100%;
}
.left_image_block img{
  width: 50%;
  object-fit:cover;
 
}
.requirements_block{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 50%;
  background: #F4F4F4;
}
.requirements_position{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 70%;
  margin: 10% 0;
}
.require_headline{
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  width: 100%;
}
.headline_divider{
  width: 25%;
  margin-bottom: 60px;
  margin-left: 0px;
  border-top: 1px solid #000000;
}
.require_headline h1{
  font-family: Gotham-book;
  font-style: normal;
  font-weight: normal;
  font-size: 18px;
  line-height: 22px;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  margin: 0 0 60px 0;
  text-align: left;
  color: #000000;
}
.require_item{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  width: 100%;
}
.require_item img{
  max-width: 40px;
  margin-right: 0px;
}
.require_text{
  display: flex;
  flex-direction: column;
  width: 75%;

}
.require_text_left{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.require_text h1, .require_text_left h1{
  margin: 0 0 16px 24px;
  font-family: Gotham-bold;
  font-style: normal;
  font-weight: bold;
  font-size: 24px;
  line-height: 28px;
  color: #222222;  
  letter-spacing: normal;
  text-align: left;
  text-transform: none;
}
.require_text p {
  font-family: Gotham-book;
  font-style: normal;
  font-weight: normal;
  font-size: 16px;
  line-height: 28px;
  color: #222222;  
  letter-spacing: normal;
  margin: 0 0 36px 24px;
}
.require_text_left p{
  font-family: Gotham-book;
  font-size: 18px;
  font-weight: 100;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.56;
  letter-spacing: normal;
  color: #222222;
}
.apply_block{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  margin: 80px 0;
}
.apply_block_position{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60%;
}
.apply_block_position h1{
  font-family: FreightDispProBook-Regular;
  font-style: normal;
  font-weight: normal;
  font-size: 60px;
  line-height: 75px;
  text-align: center;
  color: #000000;  
  letter-spacing: normal;
  color: #000000;
  margin: 0 0 24px 0;
  text-transform: none;
}
.apply_block_position p{
  font-family: Gotham-book;
  font-style: normal;
  font-weight: normal;
  font-size: 20px;
  line-height: 32px;
  text-align: center;
  color: #222222;
  font-stretch: normal;
  letter-spacing: normal;
  text-align: center;
  margin: 0;
}
.apply_block_position a{
  display: flex;
  background-color: #000000;
  text-decoration: none;
  margin-top: 40px;
  font-family: Gotham-book;
  font-style: normal;
  font-weight: bold;
  font-size: 18px;
  line-height: 22px;
  text-align: center;
  color: #FFFFFF;
  font-stretch: normal;
  letter-spacing: normal;
  padding: 20px 60px;
}
@media screen and (max-width: 769px){
  .ambas_hero_image_position{
    width: 75%;
  }
  .join_us_position{
    width: 90%;
  }
  .benefits{
    flex-wrap: wrap;
  }
  .benefit_item{
    width: 45%;
    margin-top: 30px;
  }
  .join_us_position h1{
    margin-bottom: 30px;
  }
  .left_image_block{
    flex-direction: column;
  }
  .left_image_block img, .requirements_block{
    width: 100%;
  }
  .right_image_block{
    flex-direction: column-reverse;
  }
  .apply_block_position{
    width: 80%;
  }
  .requirements_position{
    width: 80%;
  }
}
@media screen and (max-width: 450px){
  .global-wrapper {
    margin-top: 95px !important;
  }
  .ambas_hero_image {
    display:inline-block;
    margin: 0 auto;
  }
  .ambas_hero_image_position{
    width: 90%;
    padding: 40px 0;
    margin: 0 auto;
  }  
  .ambas_hero_image_position h1 {
    font-size: 40px;
    line-height: 50px;  
    margin-bottom:16px;
  }
  .ambas_hero_image_position h3{
    font-size: 14px;
    line-height:17px;
  }
  .apply_block_position h1{
    font-size: 40px;
    margin-bottom:16px;
  }
  .ambas_hero_image_position p, .require_headline h1{
    font-size: 16px;
    line-height:150%;
  }
  
  .join_us_position h1{
    margin: 40px 0 10px;
  }
  .benefits{
    flex-wrap: nowrap;
    align-items: center;
    flex-direction: column;
  }
  .benefit_item{
    width: 88%;
    margin-top: 40px;
    align-items: center;
  }
  .benefit_item h1 {
    margin: 24px 0 16px;
  }
  .requirements_position {
    margin: 40px 0 4px;
  }
  .require_headline h1{
    margin-right: 0;
    margin-bottom: 36px;
  }
  .require_text {
	width: 100%;
    padding: 0 10px;
  }
  .join_mobile, .headline_divider{
    display: none;
  }
  .left_image_block{
    flex-direction: column;
  }
  .left_image_block img, .requirements_block{
    width: 100%;
  }
  .require_headline{
    justify-content: center;
  }
  .requirements_position{
	width: 100%;
    padding: 0 24px;
  }
  .right_image_block{
    flex-direction: column-reverse;
  }
  .req_second_text{
    margin-top: 0;
  }
  .apply_block{
    margin: 40px 0 16px;
  }
  .apply_block_position{
    width: 90%;
  }
  .apply_block_position a{
    margin-top:24px;
  }
  .require_text_left p, .apply_block_position p{
    font-size: 16px;
    line-height:150%;
  }
}

