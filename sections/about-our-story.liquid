<div class="content">
    <section class="story-wrapper">
      <div class="story-section">
        <div class="story-inner dextop lazyload">
          <span>{{section.settings.title}}</span>
          <h3>{{section.settings.subtitle}}</h3>
        </div>
        <div class="story-inner mobilex">
          <span>{{section.settings.title}}</span>
          <h3>{{section.settings.subtitle}}</h3>
        </div>
      </div>
      <div class="solution-section">
        <div class="solution-inner">
          <span>{{section.settings.heading}}</span>
          <div class="row ">
            <div class="col solution-text">
              <span>{{section.settings.heading}}</span>
              <p class="solution-first__p">{{section.settings.firstsubheading}}</p>
              <p>{{section.settings.secondsubheading}}</p>
              <div class="cam-img">
                <img class="lazyload" data-src="{{section.settings.sign | img_url: ''}}" alt="">
              </div>
            </div>
            <div class="col">
              <div class="sol-img">
                <img class="lazyload" data-src="{{section.settings.image | img_url: ''}}" alt="">
              </div>
            </div>
          </div>
          <div class="sol-btn">
            <a href="{{section.settings.link}}" class="primary-btn dark-skin">READ FULL STORY <img src="https://cdn.shopify.com/s/files/1/1212/4268/files/new-arrow-right.png?v=1615891333"></a>
          </div>
        </div>
      </div>
    </section>
  </div>
  {% schema %}
  {
  "name": "Our Story",
  "settings": [
  {
  "type":"text",
  "id":"title",
  "label":"Title"
  },
  {
  "type":"text",
  "id":"subtitle",
  "label":"Sub Title"
  },
  {
  "type":"image_picker",
  "id":"back",
  "label":"Background Image (Desktop)"
  },
  {
  "type":"image_picker",
  "id":"mback",
  "label":"Background Image (Mobile)"
  },
  {
  "type":"text",
  "id":"heading",
  "label":"Heading"
  },
  {
  "type":"html",
  "id":"firstsubheading",
  "label":"First Introduction"
  },
  {
  "type":"html",
  "id":"secondsubheading",
  "label":"Second Introduction"
  },
  {
  "type":"image_picker",
  "id":"sign",
  "label":"Signature"
  },
  {
  "type":"image_picker",
  "id":"image",
  "label":"Image"
  },
  {
  "type":"url",
  "id":"link",
  "label":"Button Link"
  }
  ],
  "presets":[
  {
  "name":"Our Story",
  "category":"Featured Section"
  }
  ]
  }
  {% endschema %}
  
  <style> #shopify-section-about-our-story .dextop {background: url({{ section.settings.back | img_url: ' ' }})no-repeat top center; background-size: cover; max-width: 1222px; margin: 0 auto; padding: 370px 0 0px 0; text-align: center;} #shopify-section-about-our-story .mobilex {background: url({{ section.settings.mback | img_url: ' ' }})no-repeat top center; background-size: cover; max-width: 1222px; margin: 0 auto; padding: 232px 0 201px 0; text-align: center;} #shopify-section-about-our-story .mobilex { display: none; } @media(max-width:767px){ #shopify-section-about-our-story .story-inner.mobilex { display: block; } #shopify-section-about-our-story .dextop { display: none; } } </style>