<section class="loyaltylion-reward-page">

  <div class="customer-points">
    <h1>Welcome back, {{ customer.name }}<span style="font-size: .6em; padding-left: 10px;">{{ 'layout.customer.log_out' | t | customer_logout_link }}</span></h1>

    <h2 class="you-already-have">You have <span data-lion-points></span> points</h2>
    <div data-lion-tier-overview></div>
  </div>

  <div class="reward-page-banner">
    <section></section>
    <section class="reward-page-banner-content">
      <div class="reward-page-banner-title">{{ section.settings.banner_title }}</div>
      <div class="reward-page-banner-description">{{ section.settings.banner_description }}</div>
      <div class="reward-page-banner-button">
        <a href="/collections/all">{{ section.settings.banner_button }}</a>
      </div>
    </section>
  </div>	

  <div class="history-table">
    <div data-lion-history-table></div>
  </div>

  <div class="earn-more-points">
    <h2>{{ section.settings.earn_title }}</h2>
    <h3>{{ section.settings.earn_subtitle }}</h3>

    <div data-lion-rules-list></div>
  </div>

  <div class="your-rewards">
    <h2>{{ section.settings.rewards_title }}</h2>
    <h3>{{ section.settings.rewards_subtitle }}</h3>

    <div data-lion-rewards-list></div>
  </div>
  
  <div data-lion-tier-rules-compare style="margin: 0 auto;display: table;"></div>
  
</section>

{% schema %}
  {
    "name": "Rewards - Customer",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Banner Image"
      },
      {
        "type": "text",
        "id": "banner_title",
        "label": "Banner Title",
        "default": "Averr Aglow Loyalty Program"
      },
      {
      "type": "richtext",
      "id": "banner_description",
      "label": "Banner Description",
	  "default": "<p>To reward our favorite customers, we've introduced our Loyalty Rewards Program. Earn points on website purchase, sharing our story, referring friends and family.</p>"
      },
      {
        "type": "text",
        "id": "banner_button",
        "label": "Button Title",
        "default": "Shop Now"
      },
      {
        "type": "text",
        "id": "earn_title",
        "label": "Earn Title",
		"default": "Earn more points"
      },
      {
        "type": "text",
        "id": "earn_subtitle",
        "label": "Earn Subtitle",
		"default": "There are many ways to earn points & exchange them for rewards"
      },
      {
        "type": "text",
        "id": "rewards_title",
        "label": "Rewards Title",
		"default": "Your Rewards"
      },
      {
        "type": "text",
        "id": "rewards_subtitle",
