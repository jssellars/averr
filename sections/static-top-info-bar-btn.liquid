<!-- top info bar - title/description/button  -->

<div class="top-info-bar-btn grid-container">
    <div class="info-bar-wrap">
        <div class="info-bar-text-wrap">
            <div class="title">{{ section.settings.top_info_bar_btn }}</div>
            <div class="description" >{{ section.settings.info_bar_description }}</div>
        </div>
        <div class="info-btn-wrap">
            <a href={{ section.settings.info_bar_btn_link }} type="button">{{ section.settings.info_bar_btn_title }}</a>
        </div>
    </div>
</div>

{% schema %}
  
{
  "name": "Top info bar button",
  "settings": [
    {
      "id": "top_info_bar_btn",
      "type": "text",
      "label": "Heading",
      "default": "MR Protein Coffee Gives Back To Fight Corona"
    },
    {
	  "id": "info_bar_description",
      "type": "text",
      "label": "Description",
      "default": "For every purchase made, â‚¬5 will be donated towards the fight against COVID-19"
    },
    {
      "id": "info_bar_btn_link",
      "type": "url",
      "label": "Button link",
      "default": "/" 
    },
    {
      "id": "info_bar_btn_title",
      "type": "text",
      "label": "Button Title",
      "default": "Learn More"
    }
  ]
}

{% endschema %}

