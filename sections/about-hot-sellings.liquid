<div class="content">
    <section>
      <div class="running-products-section running-products-desktop">
        <div class="running-products-header">
          <h3>{{section.settings.head}}</h3>
        </div>
        <div class="running-products">
          <div class="row">
            <div class="col-md-3 rp-single">
              {% include 'product-snippet' %}
            </div>
            <div class="col-md-6 rp-single">
              {% include 'product-include' %}
            </div>
            <div class="col-md-3 rp-single">
              {% include 'product-loancher' %}
            </div>
          </div>
        </div>
        <div class="prod-btn">
          <a href="{{section.settings.link}}" class="primary-btn">shop all <img src="{{ 'rarrow.svg' | asset_url }}"></a>
        </div>
      </div>
    </section>
  </div>
  <style>.flex-control-thumbs {display: none;}</style>
  
  {% schema %}
  {
  "name": "Skincare Products",
  "class": "featured-products-section",
  "settings": [
  {
  "type": "text",
  "id": "head",
  "label": "Heading",
  "default":"MOST LOVED BY CUSTOMERS"
  },
  {
  "type": "url",
  "id": "button",
  "label": "Button"
  },
  {
  "type": "product",
  "id": "single_product",
  "label": "Add Product"
  },
  {
  "type": "product",
  "id": "double_product",
  "label": "Add Product"
  },
  {
  "type": "product",
  "id": "mingle_product",
  "label": "Add Product"
  },
  {
  "type": "url",
  "id": "link",
  "label": "Shop Button"
  },
  {
  "id" : "arrow",
  "type" : "image_picker",
  "label" : "Arrow right"
  }
  ],
  "presets": [{
  "name": "Skincare Products",
  "category": "Product",
  "settings": {
  }
  }]
  }
  {% endschema %}