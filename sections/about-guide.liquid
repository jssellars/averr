<section class="guide-wrapper">
    <div class="guide-section">
        <div class="contain">
            <img class="lazyload guide-image_desktop full-width-image" data-src="{{section.settings.image | img_url: '2048x'}}" alt=""
            srcset="  {{ section.settings.image | img_url: '2048x' }} 2048w,
            {{ section.settings.image | img_url: '1600x' }} 1600w,
            {{ section.settings.image | img_url: '1200x' }} 1200w,
            {{ section.settings.image | img_url: '1000x' }} 1000w,
            {{ section.settings.image | img_url: '800x' }} 800w,
            {{ section.settings.image | img_url: '600x' }} 600w,
            {{ section.settings.image | img_url: '400x' }} 400w"
            >
            <img class="lazyload guide-image_mobile full-width-image" data-src="{{section.settings.image_mobile | img_url: '2048x'}}" alt=""
            srcset="  {{ section.settings.image_mobile | img_url: '2048x' }} 2048w,
            {{ section.settings.image_mobile | img_url: '1600x' }} 1600w,
            {{ section.settings.image_mobile | img_url: '1200x' }} 1200w,
            {{ section.settings.image_mobile | img_url: '1000x' }} 1000w,
            {{ section.settings.image_mobile | img_url: '800x' }} 800w,
            {{ section.settings.image_mobile | img_url: '600x' }} 600w,
            {{ section.settings.image_mobile | img_url: '400x' }} 400w"
            >
            <div class="guide-content centered">
                <span>{{section.settings.pretitle}}</span>
                <h5>{{section.settings.title}}</h5>
            </div> 
        </div>
        <div class="guide-blocks-wrapper">
            <div class="rowpl owl-carousel">
                {% for product in section.blocks %}
                    <div class="guide-inner">
                        <div class="guide-block">
                            <div class="block-text">
                                <label>{{ product.settings.number }}</label>
                                <h6>{{ product.settings.title }}</h6>
                                <p>{{ product.settings.text }}</p>
                            </div>
                        </div>
                    </div> 
                {% endfor %}
            </div>
        </div>
        <div class="btn-wrap text-center">
            <a href="{{section.settings.link}}" class="primary-btn dark-skin guide-btn">shop all<img src="{{ 'rarrow.svg' | asset_url }}"></a>
        </div>
    </div>
</section>

{% schema %}
{
"name": "About Guide",
"settings": [
{
"type":"text",
"id":"pretitle",
"label":"Pretitle"
},
{
"type":"html",
"id":"title",
"label":"Title"
},
{
"type":"image_picker",
"id":"image",
"label":"Image Desktop"
},
{
"type":"image_picker",
"id":"image_mobile",
"label":"Image Mobile"
},
{
"type": "url",
"id": "link",
"label": "Button"
},
{
"id" : "arrow",
"type" : "image_picker",
"label" : "Arrow right"
}
],
"blocks" : [
{
"name" : "Product",
"type" : "product-block",
"limit": 4,
"settings" : [
{
"id" : "number",
"type" : "text",
"label" : "Number"
},
{
"id" : "title",
"type" : "text",
"label" : "Title"
},
{
"type":"textarea",
"id":"text",
"label":"Text"
}
]
}
],
"presets":[
{
"name":"About Guide",
"category":"About Page"
}
]
}
{% endschema %}