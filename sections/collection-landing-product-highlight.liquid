<section class="highlights product-pros-wrap">
  <span>Product Highlight</span>
  <h5>{{ section.settings.title }}</h5>
  <div class="prod-highlight-content-wrapper">
  	<img src="{{ section.settings.leftimage | img_url: '544x544' }}" alt="">
    <div class="middle-content-wrapper">
      <span>{{section.settings.middletext}}</span>
      <p>No. 1</p>
      <a href="{{section.settings.middleno1url}}">
      	<h6>{{section.settings.middleno1}}</h6>
      </a>
      
      <p>No. 2</p>
      <a href="{{section.settings.middleno2url}}">
      	<h6>{{section.settings.middleno2}}</h6>
      </a>
      
      <p>No. 3</p>
      <a href="{{section.settings.middleno3url}}">
      	<h6>{{section.settings.middleno3}}</h6>
      </a>
      
      <p>No. 4</p>
      <a href="{{section.settings.middleno4url}}">
      	<h6>{{section.settings.middleno4}}</h6>
      </a>
      
    </div>
    <img src="{{ section.settings.rightimage | img_url: '544x544' }}" alt="">
  </div>
</section>

